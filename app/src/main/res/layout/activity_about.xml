<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/about_activity_background"
    android:orientation="vertical"
    tools:context="com.inveitix.android.clue.ui.AboutActivity">

    <ImageView
        android:id="@+id/img_clue_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_clue" />

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:textColor="#fff"
        android:textSize="20sp" />


    <com.inveitix.android.clue.ui.views.JustifyTextView
        android:id="@+id/txt_clue_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_clue_description"
        android:layout_marginLeft="28dp"
        android:textSize="16sp"
        android:textColor="#fff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Â© INVEITIX 2017. All rights reserved."
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_inveitix_sait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:clickable="true"
            android:text="http://www.inveitix.com"
            android:textColorLink="#fff"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/txt_copyright"
            android:layout_marginBottom="20dp" />



    </RelativeLayout>
</LinearLayout>
